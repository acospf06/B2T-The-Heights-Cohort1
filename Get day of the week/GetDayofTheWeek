<body>
<p id=wkdy></p>

<script type="text/javascript">
	
var date = new Date();
		switch(date.getDay()){
			case 0: 
			document.getElementById("wkdy").innerHTML = ("Today is Sunday");
				break;
			case 1: 
			document.getElementById("wkdy").innerHTML = ("Today is Monday");
				break;
			case 2: 
			document.getElementById("wkdy").innerHTML = ("Today is Tuesday");
				break;
			case 3: 
			document.getElementById("wkdy").innerHTML = ("Today is Wednesday");
				break;
			case 4:
			document.getElementById("wkdy").innerHTML = ("Today is Thursday");
				break;	
			case 5:
			document.getElementById("wkdy").innerHTML = ("Today is Friday");
				break;
			case 6:
			document.getElementById("wkdy").innerHTML = ("Today is Saturday");
				break;

		}




</script>

</body>
</html>